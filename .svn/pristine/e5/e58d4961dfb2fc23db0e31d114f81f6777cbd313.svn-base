        },
        methods:{
            //客服
            sendModel(){
                kfhuifu();
			},

            
            IDzhengupdate (e){  // 上传照片
				var that = this
                var self = this;
                let file = e.target.files[0];
				/* eslint-disable no-undef */
                // 创建form对象
                var param = new FormData();
                param.append('file', file, file.name);// 通过append向form对象添加数据
                //param.append('chunk', '0') // 添加form表单中其他数据
                // FormData私有类对象，访问不到，可以通过get判断值是否传进去
                let config = {
                    headers: {'Content-Type': 'multipart/form-data'}
                };
                axios.post(unionUrl + '/passLaborweb/api/laborun/file/upload', param, config)

                    .then(response => {
						/*if (response.data.code === 0){
						 self.ImgUrl = response.data.data
						 }
						 if (response.data.msg === 'success') {
						 alert('上传成功')
						 }*/

                        that.IDzhengpic = response.data.data.newFileName
						console.log(that.IDzhengpic)
                    })
            },
            IDfanupdate (e){  // 上传照片
				var that = this
                var self = this;
                let file = e.target.files[0];
				/* eslint-disable no-undef */
                // 创建form对象
                var param = new FormData();
                param.append('file', file, file.name);// 通过append向form对象添加数据
                //param.append('chunk', '0') // 添加form表单中其他数据
                // FormData私有类对象，访问不到，可以通过get判断值是否传进去
                let config = {
                    headers: {'Content-Type': 'multipart/form-data'}
                };
                axios.post(unionUrl + '/passLaborweb/api/laborun/file/upload', param, config)

                    .then(response => {
						/*if (response.data.code === 0){
						 self.ImgUrl = response.data.data
						 }
						 if (response.data.msg === 'success') {
						 alert('上传成功')
						 }*/
                        that.IDfanpic = response.data.data.newFileName
						console.log(that.IDfanpic)
                    })
            },
            emailLise(){
                var that = this
                var aaa = window.location.search;
                var urlID = aaa.substring(1);
                console.log(urlID);
                $.ajax({
                        url: baseUrl + "/api/cms/message/item/"+urlID,
                        data: {
                        },
                        async:true,
                        dataType: "json",
                        success: function (result) {

							console.log(result)
							that.xqList=result.data

						
                        }
                    })
            },
			//获取用户信息
