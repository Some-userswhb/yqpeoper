<script>
    var vm = new Vue({
        el:'#home-build',
        data:{
            mask1left:[],
            mask1right:[],
            isactive:false,
            isPage:false,
            userInp:'',
            userPhone:'',
            addStyle:false,
            memberCenter:'',
            justNow:'',
            pageItemId:'',
            pageContentId:'',
            leftlist:[
                {name:'四季送',id:'222'},
                {name:'困难帮扶',id:'224'},
                {name:'心里关怀',id:208},
                {name:'大病医疗',id:'222'}
            ]
        },
        methods:{
            //左侧选项卡
            getMask1LeftMenu(){
                const that = this;

                        that.mask1left = that.leftlist;

            },
            //右侧信息
            getMask1LeftContent(){
                const that = this
                $.ajax({
                    url:baseUrl + "/api/category/list",
                    data:{
                        parentId:"181"
                    },
                    async: false,
                    dataType:"json",
                    success:  function (result) {
                        that.mask1right = (result.data);

                    }
                })
            },

            //右侧选项卡根据id改变内容
            rightContent(id){
                const that = this;
                $.ajax({
                    url: baseUrl + "/api/content/list",
                    data:{
                        "categoryId" : id,
                        "num" : "1",
                        "pageSize" : "4"
                    },
                    dataType:"json",
                    success:  function (result) {
                        that.mask1right = result.data.list;

                        //恢复页码为1
                        $(".zxf_pagediv").createPage({
                            pageNum: 32,
                            current: 1,
                            backfun: function(e) {
                                that.pageId = e.current;

                                $.ajax({
                                    url: baseUrl + "/api/content/list",
                                    data:{
                                        "categoryId" : that.pageItemId,
                                        "num" : that.pageContentId,
                                        "pageSize" : "4"
                                    },
                                    dataType:"json",
                                    success:  function (result) {
                                        that.mask1right = result.data.list;

                                    }
                                })


                            }
                        });



                    }
                })



            },
            //智能客服
            sendModel(){

                kfhuifu();
            },
            clear(){
            	  sessionStorage.clear();
            	  window.open("denglu.html","_self")
            },
            //分页
            pageContent(){
                const that = this;

                $(".zxf_pagediv").createPage({
                    pageNum: 32,
                    current: 1,
                    backfun: function(e) {
                        that.pageContentId = e.current;

                        $.ajax({
                            url: baseUrl + "/api/content/list",
                            data:{
                                "categoryId" : that.pageItemId,
                                "num" : that.pageContentId,
                                "pageSize" : "4"
                            },
                            dataType:"json",
                            success:  function (result) {
                                that.mask1right = result.data.list;

                            }
                        })


                    }
                });

            },

			//跳转详情页
            gotoContent(id){
				window.open('xw_xq.html'+'?'+id)

			}




        },
        mounted(){
            var that = this;
            that.getMask1LeftMenu();
            that.getMask1LeftContent();
            that. pageContent()

            $.ajax({
                url: baseUrl + "/api/content/list",
                data:{
                    "categoryId" : 222,
                    "num" : "1",
                    "pageSize" : "4"
                },
                dataType:"json",
                success:  function (result) {
                    that.mask1right = result.data.list;
                    console.log(that.mask1right)
                }
            })



            if(userTok.token == null){
                this.memberCenter = '请登录';
                $('.slide ul li:nth-child(2)').hide();
                //跳转登录界面 去登录
                $('.open-hyzx').click(function () {
                    window.open('denglu.html')
                });
            }else{
                this.memberCenter = '会员中心';
                this.userPhone = userTok.phone;
                $('.slide ul li:nth-child(2)').hide();
                tuilogin()
                //登录成功 跳转会员中心
                $('.open-hyzx').click(function () {
                    window.open('hyzx.html')
                });
            }

			//获取当前时间
            this.justNow = nowTime
            console.log(this.justNow)






        }
    })
</script>
