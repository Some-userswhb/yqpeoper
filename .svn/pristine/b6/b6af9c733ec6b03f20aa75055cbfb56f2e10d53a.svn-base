	/**
	* 分页查询文件列表。
	*
	* 参数说明
	*	id：整型，必须，栏目ID
	* 	handler: 函数，必须，需要定义两个参数：栏目的ID，数据，当请求成功后会执行。
	*	start：分页起始行，整型，非必须，默认为1。
	*	size：每页数量，整型，非必须，默认为10。
	*/
	function getContentList(id, handler, start, size){
		if (!start){
			start = 1;
		}
		if (!size){
			size = 10;
		}
		
		$.ajax({
			url: pldkGlobal.url.contentList,
			data : {
				"categoryId" : id,
				"iDisplayStart" : start,
				"iDisplayLength" : size
			},
			async : false,
			dataType : "json",
			type : "GET",
			success : function(d){handler(id, d)},
			error : receviceError
		});
	}
	
	/**
	* 获取栏目
	*
	* 参数说明
	*	id：整型，必须，栏目ID
	* 	handler: 函数，必须，需要定义一个参数：数据，当请求成功后会执行。
	*/
	function getCategoryList(id, handler){
		$.ajax({
			url: pldkGlobal.url.categoryList,
			data : {
				"parentId" : id
			},
			async : false,
			dataType : "json",
			type : "GET",
			success : handler,
			error : receviceError
		});
	}
	
