<script>
new Vue({
        el: "#nameselect",
        data: {
            isactive:false,
            userinp:'',
            userPhone:'',
            membercenter:'',


			unionName:'',//所属工会
			personName:'',//法人姓名
			number:'',//联系电话
			isShow:false,
			MOhuyunion:'',
			unionList:'',
			isLoad:false,
			remker:'',//备注
