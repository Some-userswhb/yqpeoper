        methods:{

            sendModel(){
                kfhuifu();
            },
             clear(){
            	  sessionStorage.clear();
            	  window.open("denglu.html","_self")
            },
            //去认证
			goToAttest(){
				if ($(".mLogin").html()=="立即认证") {
					window.open("hyzx.html");
				}else if ($(".mLogin").html()=="登录") {
					window.open("denglu.html","_self");

				}

			},
            addjiao(){

            	var that = this;
            	//法人资格
                $.ajax({
                    // 请求方式
                    type:"post",
                    dataType:"json",
                    // url
                    contentType:'application/json;charset=UTF-8',
                    url: unionUrl + '/passLaborweb/api/laborun/laborunLegal/addApp',
                    // 把JS的对象或数组序列化一个json 字符串
                    data:JSON.stringify({
                        "laborunName":that.unionName,
                        "applyName":that.personName,
                        "applyPhone":that.number,
                        "remark":that.remker,
                        "source":"3",
                        "token": userTok.token,
                    }),
                    // result 为请求的返回结果对象
                    success:function (result) {


                           console.log( result)  //成功
						if(result.code === "30001"){
							$('#myModal').modal();
						}
						else if (result.code === "0"){
							$('#myModal').modal();
							$('.mm_cz>span').html('法人资格已添加');
							$(".dl_anniu").hide();
						}
						else {
							$('#myModal').modal();
							$('.mm_cz>span').html(result.msg);
							$(".dl_anniu").hide();
						}


						// if(result.code === "0"){
						// 	  $('#myModal').modal();
                        //    $('.mm_cz>span').html('法人资格已添加');
                        //     // alert('法人资格已添加')
						// }else{
                        //     // alert(result.msg);
                        //     if (result.msg=="参数错误") {
                        //     	 $('#myModal').modal();
                        //       $('.mm_cz>span').html("输入错误，请重试！");
                        //     }
						//
						//
                        //     that.unionName = '';
                        //     that.personName= '';
                        //     that.number= ''
						// }

                    }
                });

            },
            //法人资格验证码
			frzgCode(){
                $.ajax({
                    type: 'POST',
                    url: "http://ftu.dev.puluodike.cn/passLaborweb/api/laborun/api/sms/send",
                    //url: "http://192.168.3.118:5003/api/sms/send",
                    contentType: "application/json",

                    data:JSON.stringify({
                        "phone":that.phone,
                        "smsType":"4"  //3法人资格 4单位建会  2重置密码
                    }),
                    dataType: "json",
                    success: function (result){
                        console.log(result)
                    }
                })
			},
            duGet(){
            	   var that = this
                $.ajax({
                    type:'post',
                    url: unionUrl + "/passLaborweb/api/laborun/laborunLegal/getLegalApplyList",
					contentType: 'application/json',
                    data:JSON.stringify({
                    	// "laborunName":that.unionName,
                     //    "applyName":that.personName,
                     //    "applyPhone":that.number,
                        "token":userTok.token
                    }),
                    async: false,
                    dataType:'json',
                    success: function (result){
                    	console.log(result);
                    	that.jinduList=result.data;
                    	var index = result.data.length -1
                    	if (result.data.length==0) {
                        	$(".xiexin_content").hide();
                        	$(".znawu_box").show();
                        }else{
                          $(".xiexin_content").show();
                          $(".znawu_box").hide();

                        }
                    	
                    }
                })

